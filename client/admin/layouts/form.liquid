<!DOCTYPE html>
<html class="h-full">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1.0">

    <title>{{ site.name }}{{ site.description }}</title>

    <link href="https://fonts.googleapis.com/css?family=Work+Sans:400,500" rel="stylesheet">

    <script defer="defer" src="/admin/assets/admin.bundle.js"></script>
    <script defer="defer" src="/admin/assets/{{ template }}.bundle.js"></script>
    <script id="data">
      window.siteData = {
        canonical_url: '{{ canonical_url }}',
        template: '{{ template }}',
        errors: {{ errors }},
      }
    </script>
  </head>
  <body class="bg-grey-lightest min-h-full font-sans layout-form template-{{ template }}">
    <main id="{{ template }}">
      {% block 'content' %}
        <h1>Admin</h1>
      {% endblock %}
    </main>
  </body>
</html>
