{% block content %}
  <h1>{{ page_title }}</h1>
  {% if errors %}
    <ul>
      {% for error in errors %}
        <li>{{ error }}</li>
      {% endfor %}
    </ul>
  {% endif %}
  <form action="/install/site" method="post" novalidate>
    <h3>Store information</h3>
    <div>
      <label for="SiteName">
        <span>Site Name</span>
        <abbr title="required">*</abbr>
      </label>
      <input id="SiteName" type="text" name="name" placeholder="Site name" required/>
    </div>
    <div>
      <label for="Description">
        <span>Description</span>
        <abbr title="required">*</abbr>
      </label>
      <input id="Description" type="text" name="description" placeholder="Site description" required/>
    </div>
    <div>
      <label for="Email">
        <span>Email</span>
        <abbr title="required">*</abbr>
      </label>
      <input id="Email" type="email" name="email" placeholder="Site email" required/>
    </div>
    <div>
      <input type="submit" value="Submit">
    </div>
  </form>
{% endblock %}
